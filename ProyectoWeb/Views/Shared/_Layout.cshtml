<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Prueba PFC TI</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>

    @* Vista Parcial con el menu de navegacion *@
    @Html.Partial("_NavBar")


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Prueba PFC TI</p>
        </footer>
    </div>

    @*Este bundle contiene todas las librerías de terceros*@
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/Scripts/DatePickerPersonalizado.js")

    @RenderSection("scripts", required: false)
</body>
</html>
